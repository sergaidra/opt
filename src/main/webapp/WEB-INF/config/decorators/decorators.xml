<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/jsp/decorators">

	<decorator name="mainlayout" page="mainlayout.jsp">
		<pattern>/main/intro/*</pattern>
	</decorator>
	<decorator name="sublayout" page="sublayout.jsp">
		<pattern>/*</pattern>
	</decorator>

	<excludes>
		<pattern>/index*</pattern>
		
		<!-- 관리자 -->
		<pattern>/mngr/*</pattern>

		<!-- 항공API정보 -->
		<pattern>/flight/*</pattern>
		
		<!-- gmap -->
		<pattern>/gmap/*</pattern>

		<!-- iframe -->
		<pattern>*Iframe/*</pattern>

		<!-- popup -->
		<pattern>*Popup/*</pattern>

		<!-- action -->
		<pattern>*Action/*</pattern>

		<!-- json -->
		<pattern>*Json/*</pattern>

		<pattern>/html/*</pattern>


		<pattern>/member/login*</pattern>
	</excludes>
</decorators>
